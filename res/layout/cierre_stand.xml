<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityCierreStand" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_claro" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="@string/articulos"
            android:textColor="@color/azul_textos"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cantidad"
            android:textColor="@color/azul_textos"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prod_no"
            android:textColor="@color/azul_textos"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cortesias"
            android:textColor="@color/azul_textos"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listCierre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3" >
    </ListView>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
        
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
	          	android:textColor="@color/azul_textos"
        	  	android:textStyle="bold"
	          	android:text="@string/lbl_total"/>
            
            <TextView
         		android:id="@+id/txtTotal"
        	  	android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:layout_gravity="right"
          		android:paddingLeft="5dp"
                android:paddingRight="15dp"
	          	android:textAppearance="?android:attr/textAppearanceMedium"
	          	android:textColor="@color/azul_live"
	          	android:textStyle="bold" />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
          		android:textColor="@color/azul_textos"
          		android:textStyle="bold"
          		android:text="@string/lbl_comision"/>
	      	
	      	<TextView
          		android:id="@+id/txtComisiones"
        	  	android:layout_width="wrap_content"
	          	android:layout_height="wrap_content"
	          	android:layout_gravity="right"
	          	android:paddingLeft="5dp"
                android:paddingRight="15dp"
	          	android:textAppearance="?android:attr/textAppearanceMedium"
	          	android:textColor="@color/azul_live"
	          	android:textStyle="bold" />
	      	
	      	<TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
          		android:textColor="@color/azul_textos"
          		android:textStyle="bold"
          		android:text="@string/lbl_falta"/>
	      	
	      	<TextView
          		android:id="@+id/txtFalta"
        	  	android:layout_width="wrap_content"
	          	android:layout_height="wrap_content"
	          	android:layout_gravity="right"
	          	android:paddingLeft="5dp"
                android:paddingRight="15dp"
	          	android:textAppearance="?android:attr/textAppearanceMedium"
	          	android:textColor="@color/azul_live"
	          	android:textStyle="bold" />
      
	</LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/efectivo"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editEfec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="@string/efectivo"
                android:inputType="numberDecimal" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/banamex"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editBanamex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="@string/banamex"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banorte"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editBanorte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="@string/banorte"
                android:inputType="numberDecimal" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/santander"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editSantander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="@string/santander"
                android:inputType="numberDecimal" />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amex"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editAmex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:hint="@string/amex"
                android:inputType="numberDecimal" />
            
            <TextView
                android:id="@+id/ingreso_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/pago_otro"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editOtro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:inputType="numberDecimal" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ingreso_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pago_otro"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editOtro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:inputType="numberDecimal" />
            
            <TextView
                android:id="@+id/ingreso_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/pago_otro"
                android:textColor="@color/azul_textos" />

            <EditText
                android:id="@+id/editOtro3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:inputType="numberDecimal" />
            
        </TableRow>
    </TableLayout>

</LinearLayout>