<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape>
		     <solid android:color="@color/azul_selected" />
		    <padding android:left="7dp" android:top="10dp" 
		            android:right="7dp" android:bottom="10dp" /> 
		    <corners android:radius="10dp" /> 
		</shape>
	</item>
    <item>
		<shape>
		     <solid android:color="@color/azul_live" />
		    <stroke android:width="0.5dp" android:color="@color/azul_fuerte" /> 
		    <padding android:left="7dp" android:top="10dp" 
		            android:right="7dp" android:bottom="10dp" /> 
		    <corners android:radius="10dp" /> 
		</shape>
	</item>
</selector>
