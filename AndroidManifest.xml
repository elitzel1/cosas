<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clicky.liveshows"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:logo="@drawable/ic_title">
        <activity android:name="com.clicky.liveshows.SplashActivity" android:screenOrientation="sensorLandscape" android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.clicky.liveshows.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.clicky.liveshows.ActivityProductos"
            android:label="@string/title_activity_activity_productos"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.clicky.liveshows.StandActivity"
            android:label="@string/title_activity_stand"
            android:parentActivityName="com.clicky.liveshows.ActivityProductos"
            android:screenOrientation="sensorLandscape" android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clicky.liveshows.ActivityProductos" />
        </activity>
        <activity
            android:name="com.clicky.liveshows.ActivityAgregarProductos"
            android:label="@string/title_activity_activity_agregar_productos"
            android:parentActivityName="com.clicky.liveshows.StandActivity"
            android:screenOrientation="sensorLandscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clicky.liveshows.StandActivity" />
        </activity>
        <activity
            android:name="com.clicky.liveshows.ActivityCierreStand"
            android:label="@string/title_activity_activity_cierre_stand"
            android:parentActivityName="com.clicky.liveshows.StandActivity"
            android:screenOrientation="sensorLandscape" android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clicky.liveshows.StandActivity" />
        </activity>
        <activity
            android:name="com.clicky.liveshows.ActivityCierreDia"
            android:label="@string/title_activity_activity_cierre_dia"
            android:parentActivityName="com.clicky.liveshows.StandActivity"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clicky.liveshows.StandActivity" />
        </activity>
        <activity android:name="com.clicky.liveshows.Settings"
            android:label="@string/title_activity_preferencias" 
            android:parentActivityName="com.clicky.liveshows.ActivityProductos"
            android:screenOrientation="sensorLandscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clicky.liveshows.ActivityProductos" />
        </activity>
        
    </application>

</manifest>
